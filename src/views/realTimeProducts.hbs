<div>
    <h1 class="uk-padding-small">Bienvenido {{name}}</h1>
</div>
<div>
    <h2 class="uk-padding-small">Listado de Productos en Tiempo Real</h2>
</div>
<div class="uk-flex uk-flex-wrap">
    <div class="uk-width-1-1 uk-width-2-3@s uk-padding-small">
        <table class="uk-table uk-table-striped uk-table-hover">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Titulo</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody id="productTableBody">
                {{#each prodList}}
                    <tr>
                        <td>{{this.code}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td>${{this.price}}</td>
                        <td>{{this.stock}}</td>
                        <td>
                            <button class="uk-icon-button" uk-icon="trash" onclick="deleteProduct({{this.id}})"></button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="uk-width-1-1 uk-width-1-3@s uk-padding-small">
        <h2>Agregar Producto</h2>
        <form id="addProductForm" class="uk-form-stacked">
                <div class="uk-margin">
                    <input class="uk-input" type="text" id="title" name="title" placeholder="Título" required>
                </div>
                <div class="uk-margin">
                    <input class="uk-input" type="text" id="code" name="code" placeholder="Código" required>
                </div>
                <div class="uk-margin">
                    <input class="uk-input" type="text" id="description" name="description" placeholder="Descripción" required>
                </div>
                <div class="uk-margin">
                    <input class="uk-input" type="number" id="price" name="price" placeholder="Precio" required>
                </div>
                <div class="uk-margin">
                    <input class="uk-input" type="number" id="stock" name="stock" placeholder="Stock" required>
                </div>
                <div class="uk-margin">
                    <button class="uk-button uk-button-primary" type="button" onclick="addProduct()">Agregar</button>
                </div>
            </form>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>